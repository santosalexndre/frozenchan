<div class="comment">
    <div class="post-info">
        <span class="post-name"><%= comment.name || "AnÃ£o" %></span>
        <span class="post-time">(<%= comment.timestamp %>)</span>
        <span class="post-number">No.<%= comment.id %></span>
        [ <span><a href="/reply">Reply</a></span> ]
    </div>
    <% if (comment.fileName) { %>
        <div class="post-file">
            File:
            <a href="/<%=board.dir%>/<%= comment.fileName%>.<%= comment.filetype %>"><%= comment.fileName %>.<%=comment.filetype%></a> (<%=comment.filewidth%>x<%=comment.fileheight%>, <%=comment.filesize/(1024)%>Kb)
        </div>
    <div class="post-image">
        <% if (comment.filetype.startsWith('mp4')) { %>
        <video src="/<%=board.dir%>/<%= comment.fileName%>.<%= comment.filetype %>" controls>
        <% } else { %>
        <img src="/<%=board.dir%>/<%= comment.fileName%>.<%= comment.filetype %>" alt="">

        <% } %>

    </div>
    <% } %>
    <div class="post-comment"><%= comment.comment %></div>
</div>